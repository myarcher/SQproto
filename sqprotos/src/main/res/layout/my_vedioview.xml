<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="@dimen/dimen_240px"
             android:orientation="vertical">

    <SurfaceView
        android:id="@+id/my_vd_surfaceView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/my_vd_bt"
                android:layout_width="@dimen/dimen_35px"
                android:layout_height="@dimen/dimen_35px"
                android:background="@mipmap/icon_right"/>

            <ProgressBar
                android:id="@+id/my_vd_pro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </FrameLayout>


    </RelativeLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mytoast_dialog_linear"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custome_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mytoast_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_35px"
        android:gravity="center"
        android:text="发现新的版本,是否更新?"
        android:textColor="@color/black_color"
        android:textSize="@dimen/dimen_18px"/>

    <TextView
        android:id="@+id/mytoast_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_35px"
        android:layout_marginRight="@dimen/dimen_35px"
        android:layout_marginTop="@dimen/dimen_10px"
        android:gravity="left"
        android:text="立即更新获得更好的购物体验"
        android:textColor="@color/gray_color"
        android:textSize="@dimen/dimen_18px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_35px"
        android:layout_marginTop="@dimen/dimen_20px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mytoast_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_25px"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimen_5px"
            android:text="取消"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/dimen_16px"/>

        <TextView
            android:id="@+id/mytoast_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_center"
            android:layout_marginLeft="@dimen/dimen_25px"
            android:layout_marginRight="@dimen/dimen_25px"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimen_5px"
            android:text="确认"
            android:textColor="@color/yellow_color"
            android:textSize="@dimen/dimen_16px"/>
    </LinearLayout>
</LinearLayout>
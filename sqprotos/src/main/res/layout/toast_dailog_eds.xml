<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/toast_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/toast_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_15px"
        android:text="提示"
        android:textColor="#030303"
        android:textSize="@dimen/dimen_20px"
        />

    <TextView
        android:id="@+id/toast_dialog_mess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_15px"
        android:text="请输入验证密码"
        android:textColor="#030303"
        android:textSize="@dimen/dimen_18px"
        />

    <com.nimi.sqprotos.view.ClearEditText
        android:id="@+id/toast_dialog_ed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dimen_15px"
        android:background="@drawable/toast_ed_bg"
        android:hint="输入信息"
        android:inputType="text"
        android:gravity="left|center_vertical"
        android:maxLength="10"
        android:padding="@dimen/dimen_10px"
        android:textColor="@color/actionsheet_gray"
        android:textSize="@dimen/dimen_18px"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/toast_dialog_canel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimen_20px"
            android:textSize="@dimen/dimen_18px"
            android:text="取消"
            android:textColor="@color/actionsheet_gray"/>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/line_color"/>

        <TextView
            android:id="@+id/toast_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimen_20px"
            android:text="确定"
            android:textColor="@color/actionsheet_blue"
            android:textSize="@dimen/dimen_18px"/>
    </LinearLayout>
</LinearLayout>